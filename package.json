{
  "name": "tek-pou-nou",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "description": "Educational platform for the Haitian community - Technology for Us",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && npm run build:sitemap",
    "build:sitemap": "node scripts/build-sitemap.js",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lighthouse": "lhci autorun",
    "seed": "tsx scripts/seed.ts",
    "db:generate-types": "supabase gen types typescript --local > src/types/database.ts",
    "prestaging": "npm run type-check && npm run lint && npm run format:check",
    "ci": "npm run prestaging && npm run build",
    "marketing:setup": "echo 'Setting up marketing features...' && npm run db:generate-types"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.18.0",
    "@supabase/supabase-js": "^2.38.0",
    "zustand": "^4.4.6",
    "react-hook-form": "^7.47.0",
    "@hookform/resolvers": "^3.3.2",
    "zod": "^3.22.4",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.0.0",
    "lucide-react": "^0.294.0",
    "date-fns": "^2.30.0",
    "react-hot-toast": "^2.4.1",
    "recharts": "^2.8.0",
    "react-i18next": "^13.5.0",
    "i18next": "^23.7.6",
    "i18next-browser-languagedetector": "^7.2.0",
    "framer-motion": "^10.16.5",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "jspdf": "^2.5.1",
    "html2canvas": "^1.4.1",
    "react-markdown": "^9.0.1",
    "react-syntax-highlighter": "^15.5.0",
    "react-textarea-autosize": "^8.5.3",
    "@stripe/stripe-js": "^2.1.11",
    "@stripe/react-stripe-js": "^2.4.0",
    "stripe": "^14.7.0",
    "@tanstack/react-query": "^5.8.4",
    "@tanstack/react-query-devtools": "^5.8.4",
    "react-error-boundary": "^4.0.11",
    "react-helmet-async": "^1.3.0",
    "react-intersection-observer": "^9.5.3",
    "react-window": "^1.8.8",
    "@sentry/react": "^7.77.0",
    "workbox-window": "^7.0.0",
    "react-share": "^4.4.1",
    "react-copy-to-clipboard": "^5.1.0",
    "xml2js": "^0.6.2",
    "sitemap": "^7.1.1",
    "gtag": "^1.0.1",
    "js-cookie": "^3.0.5"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/react-window": "^1.8.8",
    "@types/react-copy-to-clipboard": "^5.0.7",
    "@types/js-cookie": "^3.0.6",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vite-bundle-analyzer": "^0.7.0",
    "vite-plugin-pwa": "^0.17.0",
    "vite-plugin-windicss": "^1.9.3",
    "@vitejs/plugin-legacy": "^4.1.1",
    "vitest": "^0.34.6",
    "@vitest/coverage-v8": "^0.34.6",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/user-event": "^14.5.1",
    "@lhci/cli": "^0.13.0",
    "tsx": "^4.1.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0"
  },
  "keywords": [
    "education",
    "haitian",
    "creole",
    "learning",
    "technology",
    "courses",
    "blog",
    "community",
    "content-management",
    "news",
    "resources",
    "partners",
    "cms",
    "super-admin"
  ],
  "author": "MiniMax Agent",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tek-pou-nou/platform.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}